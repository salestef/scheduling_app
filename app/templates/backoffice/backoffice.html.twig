{# templates/backoffice/backoffice.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Backoffice{% endblock %}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('css/backoffice.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
            <div class="position-sticky">
                <div class="sidebar-header p-3">
                    <a href="{{ path('backoffice_index') }}">
                        <img src="{{ asset('images/logo.png') }}" alt="Site Logo" class="img-fluid" style="max-height: 50px;">
                    </a>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('backoffice_schedule') }}">
                            Schedule
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('backoffice_users') }}">
                            Users
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('backoffice_price_list') }}">
                            Price List
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Backoffice Dashboard</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    {% if app.user %}
                        <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">Logout</a>
                    {% endif %}
                </div>
            </div>

            {% block body %}{% endblock %}
        </main>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
