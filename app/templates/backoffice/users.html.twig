{# templates/backoffice/users.html.twig #}
{% extends 'backoffice/backoffice.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <h1>Users</h1>
    <p>Manage users here.</p>

    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
{#            <th>Username</th>#}
            <th>Email</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
{#                <td>{{ user.username }}</td>#}
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-sm btn-primary">Edit</a>
                    <a href="{{ path('user_delete', { 'id': user.id }) }}" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
