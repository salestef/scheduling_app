{% extends 'backoffice/backoffice.html.twig' %}

{% block body %}
    <h1>Manage Schedule</h1>

    <!-- Modal za dodavanje/izmenu slota -->
    <div class="modal fade" id="slotModal" tabindex="-1" aria-labelledby="slotModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="slotModalLabel">Slot Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" id="slotForm">
                    <div class="modal-body">
                        <input type="hidden" id="slotDate" name="date">
                        <div class="mb-3">
                            <label for="start_time" class="form-label">Start Time</label>
                            <input type="time" class="form-control" id="start_time" name="start_time" required>
                        </div>
                        <div class="mb-3">
                            <label for="end_time" class="form-label">End Time</label>
                            <input type="time" class="form-control" id="end_time" name="end_time" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save Slot</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <h2>Calendar View</h2>
    <div id="calendar"></div> <!-- FullCalendar će se ovde prikazati -->

    <!-- Uključivanje potrebnih skripti -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar/index.global.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const calendarEl = document.getElementById('calendar');
            const calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'timeGridWeek',
                events: '/backoffice/get-events',  // Ispravna ruta za učitavanje događaja
                slotDuration: '01:00:00',  // Definisano vreme slota
                allDaySlot: false,

                // Automatsko popunjavanje vremena prilikom dodavanja slota
                dateClick: function(info) {
                    $('#slotModal').modal('show');
                    $('#slotModalLabel').text('Add Slot');

                    // Popunjavanje datuma
                    $('#slotDate').val(info.dateStr);

                    // Konvertovanje vremena na format 'HH:MM'
                    const startTime = info.date.toTimeString().slice(0, 5);  // Vreme koje je kliknuto
                    const endTime = new Date(info.date.getTime() + 60 * 60 * 1000).toTimeString().slice(0, 5);  // Krajnje vreme, sat kasnije

                    // Popunjavanje vremena
                    $('#start_time').val(startTime);
                    $('#end_time').val(endTime);
                },

                // Otvaranje popupa za editovanje postojećeg slota
                eventClick: function(info) {
                    $('#slotModal').modal('show');
                    $('#slotModalLabel').text('Edit Slot');
                    $('#slotDate').val(info.event.start.toISOString().slice(0, 10));  // Popunjavanje datuma
                    $('#start_time').val(info.event.start.toTimeString().slice(0, 5));  // Početno vreme
                    $('#end_time').val(info.event.end.toTimeString().slice(0, 5));      // Krajnje vreme
                }
            });

            calendar.render();
        });
    </script>
{% endblock %}
