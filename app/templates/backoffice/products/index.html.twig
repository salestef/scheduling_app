{% extends 'backoffice/backoffice.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <h1>Products</h1>
    <a href="{{ path('backoffice_add_product') }}" class="btn btn-primary">Add Product</a>

    <table class="table mt-3">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Short Description</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.shortDesc }}</td>
                <td>{{ product.price }}</td>
                <td>
                    <a href="{{ path('backoffice_edit_product', { id: product.id }) }}" class="btn btn-secondary">Edit</a>
                    <a href="#" class="btn btn-danger" onclick="confirmDelete('{{ product.id }}')">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <script>
        function confirmDelete(productId) {
            if (confirm('Are you sure you want to delete this product?')) {
                window.location.href = "{{ path('backoffice_delete_product', { id: 'ID_PLACEHOLDER' }) }}".replace('ID_PLACEHOLDER', productId);
            }
        }
    </script>
{% endblock %}
