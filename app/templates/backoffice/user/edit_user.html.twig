{% extends 'backoffice/backoffice.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <h1>Edit User {{ user.id }}</h1>

    <div class="container">
        <form method="post" action="{{ path('user_edit', { 'id': user.id }) }}">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" name="email" value="{{ user.email }}">
            </div>

            <div class="form-group">
                <label for="password">New Password (leave empty if not changing):</label>
                <input type="password" class="form-control" id="password" name="password">
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="{{ path('backoffice_users') }}" class="btn btn-secondary">Cancel</a>
            </div>
        </form>

        <form method="post" action="{{ path('user_delete', { 'id': user.id }) }}" onsubmit="return confirm('Are you sure you want to delete this user?');" class="mt-3">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger">Delete User</button>
        </form>
    </div>
{% endblock %}
